" Setting <leader>
" using space as leader
let mapleader = " "

" IDEA Actions
nnoremap <leader>st :action FindInPath<cr>
nnoremap <leader>f :action SearchEverywhere<cr>
nnoremap <leader>gi :action GotoImplementation<cr>
nnoremap gI :action GotoImplementation<cr>
nnoremap gd :action GotoDeclaration<cr>
nnoremap <leader>gt :action GotoTest<cr>
nnoremap <leader>su :action ShowUsages<cr>
nnoremap <leader>r :action RunContextGroup<cr>
nnoremap <leader>s :action Stop<cr>
nnoremap <leader>d :action Debug<cr>
nnoremap ]e :action GotoNextError<cr>
nnoremap [e :action GotoPreviousError<cr>

" Move between splits
nnoremap <C-J> <C-W><C-J>
nnoremap <C-K> <C-W><C-K>
nnoremap <C-L> <C-W><C-L>
nnoremap <C-H> <C-W><C-H>

" Toggle Terminal
nnoremap <C-\> :action ActivateTerminalToolWindow<cr>

" Turn relative line numbers on
set relativenumber
set number

" KJump
set easymotion
nmap <leader>w <Plug>(easymotion-jumptoanywhere)

" Clipboard fix
map <leader>y "*y
map <leader>p "*p
set clipboard=unnamed

" Set NerdTree
set NERDTree
nnoremap <leader>e :NERDTreeToggle<cr>

" Set surround
set surround
